<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120sp"
    android:background="@drawable/rectangle_rounded_all"
    android:orientation="vertical" >




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="130sp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_rounded_all"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_dia"
            android:layout_gravity="center"
            android:layout_width="250sp"
            android:layout_height="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="@string/spill"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/close"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/circle"
            android:layout_toEndOf="@id/txt_dia"
            android:backgroundTint="@null"
            android:src="@drawable/pixlr_bg_result"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_colons"
            android:layout_width="90sp"
            android:layout_height="50sp"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="2sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:clickable="true"
            android:text="with ;"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btn_lines"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:layout_marginStart="100sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:clickable="true"
            android:text="New Lines"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btn_colons_two"
            android:layout_width="90sp"
            android:layout_height="50sp"
            android:layout_marginStart="228sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:clickable="true"
            android:text="with :"
            android:textColor="#ffff" />

    </RelativeLayout>

</RelativeLayout>